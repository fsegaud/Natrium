.include vars.na
.include graphics.na
.include input.na

.require registers 10
.require stack     8
.require devices   2

_main:
    ; init
    mov $px 1 ; player pos
    mov $py 1
    
    mov $score 0
    jal graphics_init
    jal _spawn_seed
    
    ; update
    _gameloop:
        jal   input_process_key
        jal   _check_seed
        jal   graphics_draw
        yield
        j     _gameloop
        
_check_seed:
    eq   r4 $px $sx
    eq   r5 $py $sy
    add  r4 r4  r5
    bne  ra r4  2 ; x and y are not equal
    inc  $score
    push ra
    jal  _spawn_seed
    pop  ra
    j   ra
; _check_seed

_spawn_seed:
    mov  $sx $scr_w
    sub  $sx $sx 2
    rndi $sx 1 $sx
    mov  $sy $scr_h
    sub  $sy $sy 2
    rndi $sy 1 $sy
    j ra
; _spawn_seed

_end:
    ret
